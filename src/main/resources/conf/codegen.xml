<?xml version="1.0" encoding="UTF-8"?>
<!-- 代码生成器的配置文件，这里面主要配置如下几个信息： 
    1.eclipse工作目录 
    2.要生成代码的数据库表名 
    3.生成代码所在模块 
    4.要生成的文件，可选有：controller,service,dao,entity,view,test，这里面可选参数：是否覆盖存在文件 -->

<codegen>
    <!-- 工作目录 -->
	<workspace>C:\workspace_current</workspace>
	
	<!-- 所在业务逻辑代码，key代表生成的包名，内容代表的是系统所在业务业务逻辑工程名 -->
	<system key="ou">biz-ou</system>
	
	<!-- 生成代码所在模块 -->
	<module>system</module>
	
	<files>
	    <!-- key为数据库表名，override代表如果覆盖掉原来的文件，value指定需要生成的文件 -->
	    <file key="days_user" override="true" value="controller,service,dao,entity,test,view"></file>
	</files>
</codegen>